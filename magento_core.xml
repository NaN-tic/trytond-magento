<tryton>
    <data>
        <menuitem name="Magento" id="menu_magento" parent="sale.menu_configuration" sequence="3"/>

        <!--Magento APP -->
        <record model="ir.ui.view" id="magento_app_form">
            <field name="model">magento.app</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <![CDATA[
                <form string="Magento APP" col="4">
                    <label name="name"/>
                    <field name="name"/>
                    <notebook>
                        <page string="General" id="general">
                            <label name="magento_default_storeview"/>
                            <field name="magento_default_storeview"/>
                            <label name="customer_default_group"/>
                            <field name="customer_default_group"/>
                            <label name="request_group"/>
                            <field name="request_group"/>
                        </page>
                        <page string="Authentication" id="authentication">
                            <label name="uri"/>
                            <field name="uri" colspan="3"/>
                            <label name="username"/>
                            <field name="username"/>
                            <label name="password"/>
                            <field name="password" widget="sha"/>
                            <button name="test_connection" string="Test Connection" colspan="4"/>
                        </page>
                    </notebook>
                    <notebook>
                        <page string="Import" id="import">
                            <separator string="Store" colspan="4" id="store"/>
                            <button name="core_store" string="Import Magento Store" colspan="4"/>
                            <separator string="Customer" colspan="4" id="customer"/>
                            <button name="core_customer_group" string="Import Customer Group" colspan="4"/>
                        </page>
                        <page string="Countries" id="countrys">
                            <separator string="Countries" colspan="4" id="countries"/>
                            <field name="magento_countrys" colspan="4"/>
                            <button name="core_regions" string="Import Regions" colspan="4"/>
                            <separator string="Regions" colspan="4" id="regions"/>
                            <field name="magento_regions" colspan="4"/>
                        </page>
                        <page string="Websites" id="websites">
                            <field name="magento_websites"/>
                        </page>
                    </notebook>
                </form>
                ]]>
            </field>
        </record>
        <record model="ir.ui.view" id="magento_app_tree">
            <field name="model">magento.app</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <![CDATA[
                <tree string="Magento APP">
                    <field name="name"/>
                    <field name="uri"/>
                </tree>
                ]]>
            </field>
        </record>
        <record model="ir.model.access" id="access_magento_app">
            <field name="model" search="[('model', '=', 'magento.app')]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_delete" eval="False"/>
        </record>

        <record model="ir.action.act_window" id="act_magento_app_form">
            <field name="name">Magento APP</field>
            <field name="res_model">magento.app</field>
        </record>
        <record model="ir.action.act_window.view" id="act_magento_app_form_view1">
            <field name="sequence" eval="10"/>
            <field name="view" ref="magento_app_tree"/>
            <field name="act_window" ref="act_magento_app_form"/>
        </record>
        <record model="ir.action.act_window.view" id="act_magento_app_form_view2">
            <field name="sequence" eval="20"/>
            <field name="view" ref="magento_app_form"/>
            <field name="act_window" ref="act_magento_app_form"/>
        </record>
        <menuitem parent="menu_magento" action="act_magento_app_form"
            id="menu_magento_app_form" sequence="10"/>

